<% if signed_in? %>

  <div class="row">
    <aside class="span4">
      <section>
        <%= render 'shared/user_info' %>
      </section>
      <section>
        <%= render 'posts/form' %>
      </section>
    </aside>
    <div class="span8">
      <% if @feed_posts.any? %>
        <h3>Posts</h3>
        <ol class="microposts">
          <%= render @feed_posts %>
        </ol>
        <%= will_paginate @feed_posts %>
      <% end %>
    </div>
  </div>

<% else %>

  <%= render 'layouts/landing' %>

  <%= link_to 'Send Mail', action: "mail_send" %>

<% end %>