<% if signed_in? %>

  <div class="row">
    <aside class="span4">
      <section>
        <%= render 'shared/user_info' %>
      </section>
      <section>
        <%= render 'posts/form' %>
      </section>
    </aside>
    <div class="span8">
      <% if @feed_posts.any? %>
        <h3>Posts</h3>
        <ol class="microposts">
          <%= render @feed_posts %>
        </ol>
        <%= will_paginate @feed_posts %>
      <% end %>
    </div>
  </div>

<% else %>

  <div class="center hero-unit">
    <h1>Welcome to Cheer</h1>

    <%= link_to "Sign up now!", new_user_path, class: "btn btn-large btn-primary" %>
  </div>

<% end %>